[{kernel, [
  {logger_level, debug},
  {logger, [
    {handler, default, logger_std_h, #{
      level => info,
      formatter => {logger_formatter, #{
        template => [time, " [", level, "] ", msg, "\n"]
      }}
    }},
    {handler, file, logger_std_h, #{
      level => debug,
      config => #{
        file => "logs/product_scraper.log"
      },
      formatter => {logger_formatter, #{
        template => [time, " [", level, "] ", msg, "\n"]
      }}
    }}
  ]}
]}].